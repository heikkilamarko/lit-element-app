{
  "mount": {
    "public": "/",
    "src": "/_dist_"
  },
  "plugins": [
    [
      "@snowpack/plugin-run-script",
      {
        "cmd": "sass src:src --no-source-map",
        "watch": "$1 --watch"
      }
    ],
    [
      "@snowpack/plugin-build-script",
      {
        "cmd": "postcss",
        "input": [".css"],
        "output": [".css"]
      }
    ],
    "@snowpack/plugin-babel",
    "@snowpack/plugin-dotenv",
    "@snowpack/plugin-webpack"
  ]
}
